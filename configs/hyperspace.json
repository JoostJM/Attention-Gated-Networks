{
  "experiment_name": "hyperspace_unet-att_1x1x3-adc",
  "arch_type": "rectum",

  "data":
  {
    "dataset_class": "RectumSegmentationDataset",
    "data_path": "../Dataset_1x1x3_adc",
    "augmentation": {
      "name": "cmr_3d_sitk_transform",
      "shift": [0.1,0.1],
      "rotate": 15.0,
      "scale": [0.7,1.3],
      "intensity": [1.0,1.0],
      "random_flip_prob": 0.5,
      "scale_size": [100,150,150],
      "patch_size": [64,96,96]
    },
    "preloadData": true,
    "exclusion": null
  },

  "model":{
    "model_type":"seg",
    "architecture": "unet_ct_multi_att_dsv",
    "tensor_dim": "3D",
    "division_factor": 16,
    "input_nc": 3,
    "output_nc": 2,
    "feature_scale": 8,
    "isTrain": true,
    "continue_train": false,
    "which_epoch": -1,
    "gpu_ids": [0, 1],
    "checkpoints_dir": "./checkpoints"
  },

  "training": {
    "criterion": "dice_loss",
    "n_epochs": 400,
    "save_epoch_freq": 10,
    "optimizer": {
      "name": "SGD",
      "parameters": {
        "lr": 1e-4,
        "weight_decay": 1e-6
      }
    },
    "scheduler": {
      "name": "step",
      "parameters": {
        "step_size": 100,
        "gamma": 0.5
      }
    },
    "batchSize": 6,
    "accumulate_iter": 1,
    "swa": false,
    "swa_start": 801,
    "swa_c": 20,
    "swa_a1": 1e-4,
    "swa_a2": 1e-6
  },

  "hyperspace":
  {
    "parameters":
    {
      "optimizer":[
        {
          "name": "SGD",
          "parameters": {
            "lr": [1e-2, 1e-3, 1e-4],
            "weight_decay": [1e-3, 1e-4],
            "nesterov": [true],
            "momentum": [0.9],
            "dampening": [0, 0.5]
          }
        },
        {
          "name": "Adam",
          "parameters": {
            "lr": [1e-2, 1e-3, 1e-4],
            "weight_decay": [1e-3, 1e-4],
            "betas": [ [0.99, 0.99] ]
          }
        }
      ],
      "scheduler": [
        {
          "name": "step",
          "parameters": {
            "step_size": [100],
            "gamma": [0.1, 0.5]
          }
        }
      ],
      "batchSize": [1, 2, 4, 8, 16]
    },
    "maxBatchSize": 4,
    "gpu_ids": [0, 1]
  },

  "visualisation":{
    "display_port": 8097,
    "no_html": true,
    "display_winsize": 256,
    "display_id": 1,
    "display_single_pane_ncols": 0
  }
}